<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_slide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_tutorial_slide"
            android:layout_width="515dp"
            android:layout_height="530dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[1]" />

        <LinearLayout
            android:layout_width="515dp"
            android:layout_height="530dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texte_view_title_tutorial_slide"
                android:layout_width="464dp"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:gravity="left"
                android:padding="16dp"
                android:text="featureTitle"
                android:textAlignment="gravity"
                android:textColor="#fff"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texte_view_desc_tutorial_slide"
                android:layout_width="464dp"
                android:layout_height="302dp"
                android:layout_margin="25dp"
                android:gravity="left"
                android:padding="16dp"
                android:text="feature description"
                android:textAlignment="gravity"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>