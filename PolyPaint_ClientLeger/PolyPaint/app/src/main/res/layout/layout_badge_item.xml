<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:gravity="clip_vertical"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/img_view_badge"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            tools:srcCompat="@tools:sample/avatars[1]" />

    <LinearLayout
            android:id="@+id/badge_description"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/text_view_badge_name"
                android:textColor="?attr/textViewColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="TextView"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/text_view_badge_timestamp"
                android:textColor="?attr/textViewColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="TextView" />
    </LinearLayout>

    <TextView
            android:id="@+id/text_view_badge_points"
            android:textColor="?attr/textViewColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="TextView" />
</LinearLayout>