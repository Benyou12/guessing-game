<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_got_it"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="25dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle_button_white"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:text="Got It"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:id="@+id/blocks"
        android:layout_width="903dp"
        android:layout_height="64dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/block1"
            layout="@layout/rounded_bloc" />

        <include
            android:id="@+id/block2"
            layout="@layout/rounded_bloc" />

        <include
            android:id="@+id/block3"
            layout="@layout/rounded_bloc" />

        <include
            android:id="@+id/block4"
            layout="@layout/rounded_bloc" />

        <include
            android:id="@+id/block5"
            layout="@layout/rounded_bloc" />

        <include
            android:id="@+id/block6"
            layout="@layout/rounded_bloc" />

        <include
            android:id="@+id/block7"
            layout="@layout/rounded_bloc" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>